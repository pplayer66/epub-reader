doctype html
html.no-js
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		title
		meta(name="description", content="")
		meta(name="viewport", content="width=device-width, user-scalable=no")
		meta(name="apple-mobile-web-app-capable", content="yes")
		link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet")
		link(rel="stylesheet", href="css/normalize.css")
		link(rel="stylesheet", href="css/main.css")
		link(rel="stylesheet", href="css/media.css")
		link(rel="stylesheet", href="css/popup.css")
		script(src="js/libs/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.4/lodash.min.js")
		script(src="js/libs/zip.min.js")
		script(src="js/init.js")
		script(src="js/libs/screenfull.min.js")
		script(src="js/epub.min.js")
		script(src="js/hooks.min.js")
		script(src="js/reader.js")
	body
		#sidebar
			#panels
				a#show-Toc.show_view.icon-list-1.active(data-view="Toc") TOC
				a#show-Bookmarks.show_view.icon-bookmark(data-view="Bookmarks") Bookmarks
				a#show-Notes.show_view.icon-edit(data-view="Notes") Notes
			#tocView.view
				h3.viewTitle Главы
			#searchView.view
				ul#searchResults
			#bookmarksView.view
				h3.viewTitle Закладки
				ul#bookmarks
					each bm, idx in bookmarks
						- var bookmark = `bookmark-${idx}`
						li.list_item(id= bookmark)
							a(href=bm).bookmark_link= bookmark
			#notesView.view
				h3.viewTitle(style='margin-left:15px') Заметки
				#new-note
					textarea#note-text
					button#note-anchor Anchor
				ol#notes
		#main
			#titlebar
				#opener
					a#slider.icon-menu Menu
				#metainfo
					span#book-title
					span#title-seperator  - 
					span#chapter-title
				#title-controls
					a#bookmark.icon-bookmark-empty Bookmark
					a#fullscreen.icon-resize-full Fullscreen
			#divider
			#prev.arrow ‹
			#viewer
			#next.arrow ›
			#progress
				#progress-range
					#progress-status
					span#progress-value
			#loader
				img(src="img/loader.gif")
		.overlay
